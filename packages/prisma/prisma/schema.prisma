generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Website {
  id        String        @id @default(uuid())
  url       String
  timeAdded DateTime
  ticks     WebsiteTick[]
}

model Region {
  id    String        @id @default(uuid())
  name  String
  ticks WebsiteTick[]
}

model WebsiteTick {
  id               String        @id @default(uuid())
  response_time_ms Int
  status           websiteStatus
  Website          Website       @relation(fields: [websiteId], references: [id])
  websiteId        String
  Region           Region        @relation(fields: [regionId], references: [id])
  regionId         String
}

enum websiteStatus {
  Up
  Down
  Unknown
}
